= form_for @place, html: { multipart: true }  do |f|
  - if @place.errors.any?
    #error_explanation
      %h2
        = pluralize(@place.errors.count, "error")
        prohibited this place from being saved:
      %ul
        - @place.errors.full_messages.each do |message|
          %li= message
  #section-add-place
    %hr/
    .col-lg-10.col-lg-offset-1
      %form
        .col-lg-12
          .form-group
            %label Place Name
            = f.text_field :name, placeholder: "Place name", class: "form-control"
        .col-lg-12
          .form-group
            %label About
            = f.text_area :about, placeholder: "e.g. The best coffee in Toronto ...", class: "form-control", rows: "3"
        .col-lg-3
          .form-group
            %label Country
            = f.text_field :country, placeholder: "Country", class: "form-control"
        .col-lg-3
          .form-group
            %label City
            %br/
            = f.select :city_id, options_from_collection_for_select(City.all, :id, :city_name), {}, class: "form-control sel"
        .col-lg-3
          .form-group
            %label Phone
            = f.text_field :phone, placeholder: "Phone", class: "form-control"
        .col-lg-3
          .form-group
            %label Full Address
            = f.text_field :address, placeholder: "Full Address", class: "form-control"
        .col-lg-12
          .form-group
            %label Link to map
            = f.gmap_coordinate_picker :lat_column => 'latitude', :lng_column => 'longitude' , :zoom_level => 12, :default_coordinates => ['9.9333','-84.0833'], map_width: 800
        .col-lg-3
          .form-group
            %label Link to Facebook (*)
            = f.text_field :fb, placeholder: "https://www.facebook.com/", class: "form-control"
        .col-lg-3
          .form-group
            %label Link to Twitter (*)
            = f.text_field :twit, placeholder: "https://twitter.com/", class: "form-control"
        .col-lg-3
          .form-group
            %label Link to Instagram (*)
            = f.text_field :insta, placeholder: "https://www.instagram.com/", class: "form-control"
        .col-lg-3
          .form-group
            %label Link to website (*)
            = f.text_field :web, placeholder: "http://www.example.com", class: "form-control"
        %h5.danger (*) Please provide all URLs with http:// or https://
        %br/
        %hr/
        .col-lg-12
          .form-group
            .row
              %label
                Choose category
                %small (You can choose max 3 categories)
              .col-sm-offset-1.col-sm-10
                = f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|
                  - cb.label(class: "checkbox-inline input_checkbox") {cb.check_box(class: "checkbox") + cb.text}
        %hr/
        .form-group
          %label{:for => "exampleInputFile"} Upload image of the place
          = f.file_field :image
        %hr/
        - @open_days.each do |open_day|
          = f.fields_for :open_days, open_day do |open_f|
            .form-inline
              .row
                .col-md-1
                  /-binding.pry
                  /= open_f.select_hour :start_time, {field_name: :start_time , ampm: true}
                  = open_f.hidden_field :day_in_week, value: open_day.day_in_week
                  = open_f.label open_day.day_in_week
                  = open_f.check_box :open, {class: 'form-control'}
                .col-md-1
                  = open_f.time_select :start_time,  {ampm: true, discard_minute: true, ignore_date: true}, {class: 'form-control'}
                .col-md-1
                  = open_f.time_select :end_time,  {ampm: true, discard_minute: true, ignore_date: true}, {class: 'form-control'}

        = f.submit "Submit", class: "btn btn-success"

      = link_to 'Back', places_path, class: "btn btn-default btn-xs pull-right"

:javascript
  loadCurrentLocation()
