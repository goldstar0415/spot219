= form_for(@blog_comment) do |f|
  - if @blog_comment.errors.any?
    #error_explanation
      %h2
        = pluralize(@blog_comment.errors.count, "error")
        prohibited this blog_comment from being saved:
      %ul
        - @blog_comment.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .actions
    = f.submit
