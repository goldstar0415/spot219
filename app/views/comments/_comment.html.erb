<%= div_for(comment) do %>
  <div class="media">
    <div class="media-left pull-left">
      <%= link_to (image_tag comment.user.avatar.url(:thumb), size: "55x55"), comment.user %>
    </div>
   <div class="media-body">
     <h5 class="media-heading" style="font-weight: bold;"><%= h(comment.title) %> 
       <% if comment.number == 1 %>
         <%= image_tag("star-on.png") %>
       <% elsif comment.number == 2 %>
         <%= image_tag("star-on.png") %>
         <%= image_tag("star-on.png") %>
       <% elsif comment.number ==3 %>
         <%= image_tag("star-on.png") %>
         <%= image_tag("star-on.png") %>
         <%= image_tag("star-on.png") %>
       <% elsif comment.number == 4 %>
         <%= image_tag("star-on.png") %>
         <%= image_tag("star-on.png") %>
         <%= image_tag("star-on.png") %>
         <%= image_tag("star-on.png") %>
       <% elsif comment.number == 5 %>
         <%= image_tag("star-on.png") %>
         <%= image_tag("star-on.png") %>
         <%= image_tag("star-on.png") %>
         <%= image_tag("star-on.png") %>
         <%= image_tag("star-on.png") %>
       <% end %>
     </h5>
     <p><%= h(comment.description) %></p>
     <p><small>Posted: <%= time_ago_in_words(comment.created_at) %> ago by <%= link_to h(comment.user.full_name), comment.user %></small></p>
   </div>
  </div>
  <hr>
<% end %>
