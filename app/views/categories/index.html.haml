%h4.title Listing All Categories
#section-one
  %div{:align => "center"}
    = paginate @categories
    - @categories.each do |category|
      %ul.listing
        .row
          .well.col-md-4.col-md-offset-4
            %li.article-title
              = link_to "#{category.name}", category_path(category)
            %li
              %small= pluralize(category.places.count, "place")
    = paginate @categories
